<resources>

    <!-- APP -->

    <style name="App" />

    <!-- Parent -->

    <style name="App.Parent">
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- CONTAINER -->

    <style name="App.Box">
        <item name="android:background">@color/color_background</item>
        <item name="android:paddingStart">@dimen/medium_box_size</item>
        <item name="android:paddingEnd">@dimen/medium_box_size</item>
        <item name="android:paddingTop">@dimen/medium_box_size</item>
    </style>

    <style name="App.Box.Floating">
        <item name="android:layout_marginEnd">@dimen/tiny_box_size</item>
        <item name="android:layout_marginStart">@dimen/tiny_box_size</item>
        <item name="android:layout_marginBottom">@dimen/tiny_box_size</item>
        <item name="android:layout_marginTop">@dimen/medium_box_size</item>
        <item name="android:paddingBottom">@dimen/tiny_box_size</item>
        <item name="android:paddingTop">@dimen/tiny_box_size</item>
        <item name="android:paddingStart">@dimen/tiny_box_size</item>
        <item name="android:paddingEnd">@dimen/tiny_box_size</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="App.Box.Header">
        <item name="android:minHeight">@dimen/header_size</item>
        <item name="android:paddingBottom">@dimen/big_box_size</item>
        <item name="android:paddingTop">@dimen/big_box_size</item>
        <item name="android:paddingStart">@dimen/big_box_size</item>
        <item name="android:paddingEnd">@dimen/big_box_size</item>
        <item name="android:elevation">@dimen/header_elevation</item>
    </style>

    <style name="App.Box.Divider">
        <item name="android:paddingStart">@dimen/medium_box_size</item>
        <item name="android:paddingEnd">@dimen/medium_box_size</item>
        <item name="android:paddingTop">@dimen/medium_box_size</item>
        <item name="android:paddingBottom">@dimen/medium_box_size</item>
        <item name="android:background">@drawable/item_divider</item>
    </style>

    <style name="App.Box.Rounded">
        <item name="android:paddingStart">@dimen/medium_box_size</item>
        <item name="android:paddingEnd">@dimen/medium_box_size</item>
        <item name="android:paddingTop">@dimen/medium_box_size</item>
        <item name="android:paddingBottom">@dimen/medium_box_size</item>
        <item name="android:background">@drawable/item_corner_round</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- ITEM -->

    <style name="App.Item" />

    <style name="App.Item.PrimaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:paddingStart">@dimen/zero_box_size</item>
        <item name="android:paddingEnd">@dimen/zero_box_size</item>
        <item name="android:paddingTop">@dimen/zero_box_size</item>
        <item name="android:paddingBottom">@dimen/zero_box_size</item>
    </style>

    <style name="App.Item.PrimaryText.Colored">
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="App.Item.PrimaryText.ColoredBox">
        <item name="android:background">@color/color_secondary</item>
        <item name="android:textColor">@color/color_on_secondary</item>
    </style>

    <style name="App.Item.PrimaryText.Box">
        <item name="android:background">@color/color_tertiary</item>
        <item name="android:textColor">@color/color_on_tertiary</item>
    </style>

    <style name="App.Item.PrimaryText.Small">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="App.Item.PrimaryText.Big">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="App.Item.PrimaryText.Huge">
        <item name="android:textSize">@dimen/huge_text_size</item>
    </style>

    <style name="App.Item.SecondaryText" parent="App.Item.PrimaryText">
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="App.Item.SecondaryText.Huge" parent="App.Item.PrimaryText">
        <item name="android:textColor">@color/color_on_background</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
    </style>

    <style name="App.Item.Editable">
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:minHeight">@dimen/editable_min_height_size</item>
        <item name="android:background">@color/color_surface</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textColorHint">@color/color_on_primary_hint</item>
        <item name="android:paddingStart">@dimen/small_box_size</item>
        <item name="android:paddingEnd">@dimen/small_box_size</item>
        <item name="android:paddingTop">@dimen/small_box_size</item>
        <item name="android:paddingBottom">@dimen/small_box_size</item>
    </style>

    <style name="App.Item.Editable.Search">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/medium_box_size</item>
    </style>

    <style name="App.Item.Editable.Clickable">
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">@dimen/medium_box_size</item>
    </style>

    <style name="App.Item.Editable.DropDown">
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">@dimen/medium_box_size</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="App.Item.Button">
        <item name="android:paddingStart">@dimen/small_box_size</item>
        <item name="android:paddingEnd">@dimen/small_box_size</item>
        <item name="android:paddingTop">@dimen/small_box_size</item>
        <item name="android:paddingBottom">@dimen/small_box_size</item>
        <item name="android:background">@drawable/item_button</item>
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App.Item.Button.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="App.Item.FloatingButton">
        <item name="android:layout_marginStart">@dimen/medium_box_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_box_size</item>
        <item name="android:layout_marginTop">@dimen/medium_box_size</item>
        <item name="android:layout_marginBottom">@dimen/medium_box_size</item>
        <item name="elevation">1dp</item>
    </style>

</resources>